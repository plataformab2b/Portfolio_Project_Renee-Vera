<h1>About Me</h1>
<!-- about.ejs -->
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>About Me</title>
</head>
<body>
    <div class="container mt-5">
        <!-- About Me Card -->
        <!-- This card will display your name, image, a short paragraph about you, and a link to your resume -->
        <div class="card mx-auto" style="width: 18rem;">
            <img src="/images/your-image.jpg" class="card-img-top" alt="Your Image">
            <div class="card-body">
                <h5 class="card-title">Your Legal Name</h5>
                <p class="card-text">
                    This is a short paragraph about who you are. Keep this clean and simple as it may be viewed by perspective employers.
                </p>
                <!-- Resume Link -->
                <!-- This button links to the PDF version of your resume -->
                <a href="/files/resume.pdf" class="btn btn-primary" target="_blank">
                    View My Resume
                </a>
            </div>
        </div>
    </div>
    <!-- Including Bootstrap JS for additional functionalities like modals and tooltips -->
    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Include Footer -->
    <%- include('footer') %>
</body>
</html>

